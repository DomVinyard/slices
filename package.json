{
  "name": "slices",
  "version": "1.0.0",
  "description": "File-based memory for AI agents",
  "private": true,
  "workspaces": [
    "core/format/parser",
    "core/format/validation",
    "core/format/freshness",
    "docs"
  ],
  "scripts": {
    "test": "bun test core/",
    "test:parser": "bun test core/format/parser/",
    "test:validation": "bun test core/format/validation/",
    "test:freshness": "bun test core/format/freshness/",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DomVinyard/slices.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
